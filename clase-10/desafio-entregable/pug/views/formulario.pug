head
    title= "Formulario EJS"
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")

body(class="container")
    h1(class="text-primary")= "Ingrese Datos"
    form(class="col-8" action="/productos" method="post")
        div(class="mb-3")
            label(for="title" class="form-label")= "Nombre del producto:"
            input(type="text" class="form-control" id="title" name="title")
        div(class="mb-3")
            label(for="price" class="form-label")= "Precio: "
            input(type="text" class="form-control" id="price" name="price")
        div(class="mb-3")
            label(for="thumbnail" class="form-label")= "Thumbnail: "
            input(type="text" class="form-control" id="thumbnail" name="thumbnail")
        button(type="submit" class="btn btn-primary")= "Submit"
    a(class="btn btn-primary" href="http://localhost:8080/productos")= "Ir a productos"
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous")
